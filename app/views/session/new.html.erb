<div class="content">

  <h2>Login to Burning Airlines Admin Portal</h2>

  <% if flash[:error] %>
  <!-- print out any error messages from the controller -->
  <br>
  <strong>
    <%= flash[:error] %>
  </strong>
  <br>
  <br>
  <% end %>

  <hr>
  <div class="form">
  <!-- we are not interacting with a model object, so we don't use 'form_for @obj' -->
  <%= form_tag login_path do %>

        <%= label_tag :email %>

        <%= email_field_tag :email %>

        <%= label_tag :password %>

        <%= password_field_tag :password %>

  <hr>
  <br>
  <%= submit_tag 'Login' %>
    <% end %>
  </div>
</div>
